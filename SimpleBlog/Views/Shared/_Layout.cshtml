@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Simple Blog</title>
</head>
<body>


    <img src="https://www.trakya.edu.tr/admin/tools/theme/www_v2/images/logo/tr/logo.png" />
    <h1>This is our SimpleBlog Project</h1>
    @Html.RouteLink("Home Page", "Home") |

    @if (!User.Identity.IsAuthenticated)
    {
        <text> @Html.RouteLink("Login Page", "Login") |</text>
    }
    else
    {
        <p>Welcome  @User.Identity.Name @Html.RouteLink("Logout", "Logout")</p>
        if (User.IsInRole("admin"))
        {
            <a href="@Url.Action("index","posts",new { area="admin"})">Admin Post</a> <text>|</text>
        }

    }


    @Html.RouteLink("Product List", "List")


    @RenderBody()
    @RenderSection("TopBar", false)

    <br />
    This web page is under construction

    @ViewBag.ABCD
    <footer>
        &copy; - @DateTime.Now.Year - Me
    </footer>

    @RenderSection("Scripts", false)
</body>
</html>